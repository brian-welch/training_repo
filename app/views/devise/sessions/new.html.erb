<% @title = "Log in to Training Repo" %>

<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4">
    <h1>Log in to <span class="brand_font">TR</span></h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: " Remember me", label_html: {style: "margin-left: 10px;" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-primary" %>
      </div>
    <% end %>
      <div class="col-xs-12">
        <hr>
        <h4 style="margin-bottom: 25px;"><em>-or-</em></h4>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
