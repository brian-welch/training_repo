<% @title = "Sign up for Training Repo" %>

<div class="container">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <h1>Sign up for <span class="brand_font">TRAINING REPO</span></h1>
    <%= simple_form_for(resource, html: { autocomplete: 'off' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>


      <div class="form-inputs">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :first_name,
                        input_html: { type: "search", autocomplete: 'off' },
                        autofocus: true %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :last_name %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-10">
            <%= f.input :email,
                        placeholder: 'user@domain.com',
                        required: true %>
          </div>
          <div class="col-xs-4 col-sm-2 col-md-2">
          <!--div class="simple_form_select_arrow"></div>-->
            <%= f.association :gender,
                        as: :select,
                        required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-5">
           <%= f.input :birthdate,
                        wrapper_html: { class: 'form-inline' },
                        required: true,
                        start_year: Date.today.year - 60,

                        end_year: Date.today.year - 18  %>
          </div>
          <div class="col-xs-6 col-md-3">
           <%= f.input :weight,
                        label: "Your Weight",
                        as: :integer
                        # wrapper_html: { class: 'form-inline' },
                        %>
          </div>
          <div class="col-xs-6 col-md-4">

           <%= f.input :units_of_measure,
                        label: "Measure Units",
                        label_html: {class: 'form-control-label'},
                        # as: :radio_buttons,
                        collection: ['metric', 'imperial'],
                        required: true,
                        hint: "(f you aren't immediately certain what this implies, then this app may not be for you.)".html_safe
                        %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= f.input :password,
                        required: true,
                        placeholder: '********',
                        hint: ("(#{@minimum_password_length} characters minimum)" if @minimum_password_length) %>
          </div>
          <div class="col-xs-12 col-md-6">
            <%= f.input :password_confirmation,
                        placeholder: '********',
                        required: true %>
          </div>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn-primary"  %>
        </div>
      </div>
    <% end %>

      <div class="col-xs-12">
        <hr>
        <h4 style="margin-bottom: 25px;"><em>-or-</em></h4>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
