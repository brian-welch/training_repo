<div class="container">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <h1>All Machines in Training Repo's Database</h1>
    <div class="dotted_hr"></div>
    <% @brand_machine_hash.delete("Placeholder") %>
    <% if @brand_machine_hash.count == 0 %>
      <div class="exercise_set_container">
        <div class="session_set_index_exercise_name">
          <h3><%= image_tag "icons_symbols/tr_cross_a.svg", style: "width: 30px;" %> There are no machines in the database yet.</h3>
        </div>
      </div>
    <% else %>
      <% @brand_machine_hash.sort_by {|x,y| x }.each do |brand, machines| %>
        <div class="exercise_set_container">
          <div class="session_set_index_exercise_name">
            <%= image_tag "icons_symbols/tr_check_a.svg", class: "exercise_name_check", style: "" %> <%= brand %><span style="position: relative; top: -0.5em; font-size: 80%;"> <i class="far fa-registered"></i></span>
            <% machines.each do |machine| %>
              <div class="session_set_index_machine_name">
                <%= image_tag "icons_symbols/tr_spiral_c.svg", style: "" %> <%= proper_string(machine.name) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
