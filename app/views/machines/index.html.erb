<div class="container">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <h1>All Machines in Training Repo's Database</h1>
    <hr>
    <% @brand_machine_hash.delete("Placeholder") %>
    <% if @brand_machine_hash.count == 0 %>
      <h3>There are no machines in the database yet.</h3>
    <% else %>
      <% @brand_machine_hash.sort_by {|x,y| x }.each do |brand, machines| %>
          <%= brand %><span style="position: relative; top: -0.5em; font-size: 80%;"> <i class="far fa-registered"></i></span>
          <ul>
            <% machines.each do |machine| %>
              <li> <%= machine.split(" ").map{|x| x.capitalize}.join(" ") %></li>
            <% end %>
          </ul>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>
