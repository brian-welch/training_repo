
<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4">
    <h1><%= image_tag "logo_and_branding/tr_spiral_with_physics_a.svg", width: "50", style: "position:relative; bottom: 5px;" %> Add a Machine</h1>
    <%= simple_form_for [@new_machine], html: { autocomplete: "off" }  do |f| %>
      <%#= f.error_notification %>
      <div class="form-inputs">

        <!--<div class="simple_form_select_arrow"></div>-->
        <%= f.association :brand,
                          label: "Select the Brand",
                          error: "You must select from the given brands",
                          input_html: { style: "cursor: pointer; font-variant: small-caps;" } %>

        <div id="machine_duplicate_warning" class="contrast_buzzword" style="font-size:0.75em;"></div>
        <%= f.input :name,
                    hint: "(There is a naming convention. <span style=\"cursor: pointer;\" onclick=\"namingConventionInfo()\")><i class=\"fas fa-question-circle\"></i></span>)".html_safe,
                    input_html: { placeholder: "'Model Series - Movement'",
                                  onkeyup: "check_machine_name(#{@all_machine_json}[document.getElementById('machine_brand_id').value],this.value)" } %>

        <div class="col-xs-12">
          <%= f.input :mech_ad,
                      label: "Mechanical Advantage",
                      hint: "<em>A whole number or decimal using '.'<br>It is very rare that this value is under 1.0</em>".html_safe,
                      input_html: { style: "width: 30%;" } %>
          <%= link_to "https://www.sophia.org/tutorials/simple-machines-levers--2", target: "new", style: "font-style: italic;" do %>
            <button class="btn-xs new_menu_info_button" type="button" style="font-size: 0.8em;">
               &nbsp;Calculating mechanical advantage?&nbsp;
            </button>
          <% end %>
        </div>

        <div class="col-xs-12">
          <%= f.input :pulley_count,
                      label: "Number of Pulleys",
                      error: "Number of Pulleys must be given",
                      input_html: { style: "width: 30%;" } %>
          <%= link_to "https://i.pinimg.com/originals/57/0e/06/570e06b8027cadd279645d200298241b.png", target: "new", style: "font-style: italic;" do %>
            <button class="btn-xs new_menu_info_button" type="button" style="font-size: 0.8em;">
               &nbsp;Pulleys...?  What? Who? How? Why?&nbsp;
            </button>
          <% end %>
        </div>

        <div class="col-xs-12">
          <%= f.input :inherit_weight,
                      label: "Inherited #{@weight_units.upcase} from Apparatus",
                      input_html: { style: "width: 30%;" },
                      hint: "0 in most instances".html_safe
                       %>
        </div>

      </div>

      <div class="col-xs-12">
        <hr>
        <div class="form-actions">
          <%= f.button :submit, "Save", class: "btn-primary" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
