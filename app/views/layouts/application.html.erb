<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= title %>
    <link rel="icon"
          type="image/png"
          href="<%= image_path("icons_symbols/tr_favicon_a.svg")  %> ">
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= yield :head %>

  </head>
  <body>
    <% set_is_active_session_instance_variable  %>
    <% set_current_session_instance_variable if (!@current_session && @is_active_session) %>

    <%= render 'shared/desktop_navbar' %>
    <%= render 'shared/flashes' %>
    <%= yield %>
    <%= render 'shared/footer' %>
    <%= render 'shared/timer' if @is_active_session %>
    <%= render 'shared/mobile_navbar' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
